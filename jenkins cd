pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build stage started'
                sh 'chmod +x test.sh'
                sh './test.sh'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to Apache server'
                sh ' cp index.html /var/www/html/index.html'
                sh ' systemctl restart apache2'
            }
        }
    }
}
